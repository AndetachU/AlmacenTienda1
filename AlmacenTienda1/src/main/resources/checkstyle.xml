<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
        "http://www.puppycrawl.com/dtds/configuration_1_3.dtd">

<module name="Checker">
    <property name="charset" value="UTF-8"/>

    <!-- Configuración de reglas -->
    <module name="TreeWalker">

        <!-- Regla para indentación -->
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
            <property name="braceAdjustment" value="0"/>
        </module>

        <!-- Regla para tamaño máximo de línea -->
        <module name="LineLength">
            <property name="max" value="120"/>
            <property name="ignorePattern" value="^import\s.*;$"/>
        </module>

        <!-- Regla para nombres de variables -->
        <module name="VariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
            <property name="allowHungarianNotation" value="false"/>
        </module>

        <!-- Regla para nombres de métodos -->
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Regla para nombres de constantes -->
        <module name="ConstantName">
            <property name="format" value="^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$"/>
        </module>

        <!-- Regla para verificación de código duplicado -->
        <module name="DuplicateCode"/>

        <!-- Regla para el uso de espacios en blanco -->
        <module name="WhitespaceAround">
            <property name="tokens" value="METHOD_DEF,CTOR_DEF"/>
        </module>

        <!-- Regla para colocación de llaves -->
        <module name="LeftCurly">
            <property name="option" value="nl"/>
        </module>

        <!-- Regla para el uso de comentarios -->
        <module name="CommentsIndentation"/>
        <module name="SingleLineJavadoc"/>
        <module name="JavadocParagraph"/>
        <module name="JavadocMethod"/>


        <!-- Regla para manejo de errores y excepciones -->
        <module name="EmptyBlock">
            <property name="option" value="TEXT"/>
            <property name="tokens" value="LITERAL_TRY"/>
        </module>
        <module name="AvoidNestedBlocks"/>

    </module>
</module>
